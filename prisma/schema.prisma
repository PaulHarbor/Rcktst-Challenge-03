// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum Build {
  SMALL
  MEDIUM
  LARGE
}

enum Independence {
  LOW
  MEDIUM
  HIGH
}

enum Species {
  DOG
  CAT
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(MEMBER)
  created_at    DateTime @default(now())

  @@map("users")
}

model Pet {
  id          String   @id @default(uuid())
  name        String
  species     Species
  city        String
  register_at DateTime @default(now())

  age          Int
  energy       Int
  build        Build
  independence Independence
  description  String?

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String @map("org_id")

  @@map("pets")
}

model Org {
  id            String @id @default(uuid())
  title         String
  email         String @unique
  password_hash String
  address       String
  phone         String
  role          Role   @default(ADMIN)
  pets          Pet[]

  @@map("orgs")
}
